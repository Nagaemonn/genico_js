{
  "name": "genico-js",
  "version": "1.0.0",
  "description": "PNG to ICO converter desktop application",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "watch": "tsc --watch",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run watch\" \"wait-on dist/main.js && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "electron-dist": "npm run build && electron-builder --publish=never"
  },
  "keywords": [
    "ico",
    "png",
    "converter",
    "desktop-app",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "formidable": "^3.5.1",
    "jimp": "^1.6.0"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/formidable": "^3.4.6",
    "@types/jimp": "^0.2.1",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.genico.desktop",
    "productName": "Genico",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "templates/**/*",
      "genico.ico",
      "icon.icns",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": "dmg",
      "icon": "icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "genico.ico"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
